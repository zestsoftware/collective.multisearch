<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<head>
  <metal:block metal:fill-slot="head_slot">
    <link rel="alternate" title="RSS 1.0" type="application/rss+xml"
          tal:define="here_url context/@@plone_context_state/object_url;"
          tal:condition="request/SearchableText|nothing"
          tal:attributes="href string:$here_url/search_rss?${request/QUERY_STRING}"/>
  </metal:block>

</head>
<body>
<metal:column_one fill-slot="column_one_slot" />
<metal:column_one fill-slot="column_two_slot" />
<metal:block fill-slot="top_slot" tal:define="dummy python:request.set('disable_border', 0)" />
<div metal:fill-slot="main">
  <form method="GET"
        id="multisearch"
        action="@@multisearch"
        tal:define="portal context/@@plone_portal_state/portal;
                    here_url context/@@plone_context_state/object_url;
                    st python:request.get('SearchableText', '');
                    DateTime python:modules['DateTime'].DateTime;"
        tal:attributes="action python: '%s/@@multisearch' % here_url">

    <fieldset class="noborder">
      <input name="SearchableText"
             type="text"
             size="25"
             title="Search Site"
             i18n:attributes="title title_search_title;"
             tal:attributes="value st;"
             />
      <input class="searchPage"
             type="submit"
             value="Search"
             i18n:attributes="value label_search;"/>
    </fieldset>

    <div class="row">
      <div class="cell width-full position-0">
        <h1 class="documentFirstHeading"
            i18n:translate=""
            tal:condition="not:st">
          Search results
        </h1>
        <h1 class="documentFirstHeading"
            i18n:translate=""
            tal:condition="st">
          Search results for
          <strong id="search-term" tal:content="st" i18n:name="term">
            Search Term
          </strong>
        </h1>
      </div>
    </div>
  </form>

  <tal:block tal:define="columns view/get_portlets;
                         column_number view/get_column_number">
    <tal:block tal:repeat="column columns">
      <div tal:define="column_index repeat/column/index"
           tal:attributes="class python: 'multi_search_column multi_search_column-%s' % column_number;
                           id python: 'multi_search_column-%s' % column_index">
        <span tal:repeat="portlet column"
              tal:replace="structure portlet/render" />
      </div>
    </tal:block>
  </tal:block>

  <div class="multi_search_spacer" />
  <a tal:define="here_url here/absolute_url"
     tal:condition="view/can_manage_portlets"
     tal:attributes="href python: '%s/@@manage-multisearch' % here_url"
     i18n:domain="collective.multisearch"
     i18n:translate="label_manage_multisearch">Manage search portlets</a>
</div>
</body>
</html>
