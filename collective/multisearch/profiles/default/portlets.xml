<?xml version="1.0"?>
<portlets>
  <portletmanager
     name="multisearch.MultisearchPortletManager"
     type="collective.multisearch.browser.interfaces.IMultisearchPortletManager"
    />

  <portlet
    addview="multisearch.RemoteSearchPortlet"
    title="Remote search results portlet"
    description="Remote search results portlet">
    <for interface="collective.multisearch.browser.interfaces.IMultisearchPortletManager"/>
  </portlet>

  <portlet
    addview="multisearch.LocalSearchPortlet"
    title="Local search results portlet"
    description="Local search results portlet">
    <for interface="collective.multisearch.browser.interfaces.IMultisearchPortletManager"/>
  </portlet>

  <portlet
    addview="multisearch.SearchPortlet"
    title="Multi search portlet"
    description="Search portlet (overriden to point to multisearch)">
  </portlet>

</portlets>